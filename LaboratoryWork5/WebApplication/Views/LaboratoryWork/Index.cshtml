@using static WebApplication.Models.LaboratoryWork.IndexModel
@model Output
@{
    ViewData["Title"] = $"Лабораторна робота №{Model.LaboratoryWorkNumber}";
}


@if (ViewContext.ModelState.IsValid)
{
    <div class="row">
        <div class="col-6 mx-auto">
            <div class="card">
                <div class="card-header">
                    Опис
                </div>
                <div class="card-body">
                    <partial name=@($"_Description{Model.LaboratoryWorkNumber}") />
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-around mt-5">
        <div class="col-5">
            <div class="card">
                <div class="card-header">
                    Вхід
                </div>
                <div class="card-body">
                    <form method="post">
                        <textarea
                            class="form-control mt-3"
                            asp-for=InputText
                            rows="10"
                        >
                            @Model.InputText
                        </textarea>
                        <button class="btn btn-primary mt-3" type="submit">Виконати</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-5">
            <div class="card">
                <div class="card-header">
                    Вихід
                </div>
                <div class="card-body">
                    <span class="white-space-pre">@Model.OutputText</span>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-6 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center text-danger">Сталась помилка</h3>
                </div>
                <div class="card-body text-danger" asp-validation-summary="All"></div>
            </div>
        </div>
    </div>
}